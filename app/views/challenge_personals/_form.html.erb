<%= form_with model: @challenge_personal, local: true do |form| %>
    <div>
        <%= form.label :name %>
        <%= form.text_field :name %>
    </div>
    <div>
        <%= form.label :description %>
        <%= form.text_area :description %>
    </div>
    <div>
        <%= form.label :url %>
        <%= form.text_field :url %>
    </div>
    <div>
        <%= form.label :checkpoint_id %>
        <%= form.select :checkpoint_id, options_for_select(Checkpoint.all.map { |c| [c.name, c.id] }) %>
    <div>
        <%= form.submit %>
    </div>
<% end %>
