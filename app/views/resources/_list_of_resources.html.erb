<!-- show list of resources -->
<% if @list_resources %>
    
  <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 md:rounded-lg | my-5">
    <table class="table-auto | min-w-full divide-y divide-gray-300">
      <thead class="bg-gray-50">
        <tr class="text-left">
          <th class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6">ID</th>
          <th class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Nombre</th>
          <th class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Descripci√≥n</th>
          <th class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Acciones</th>
        </tr>
      </thead>
      <tbody>
      <% @list_resources.each do |resource| %>
        <tr>
          <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-600 sm:pl-6 | hover:text-black"><%= link_to resource.id, resource %></td>
          <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= resource.name %></td>
          <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= resource.description %></td>
          <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
            <span class="isolate inline-flex rounded-md shadow-sm">
              <%= link_to resource_path(resource), class: "relative inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-1 focus:ring-indigo-500" do %>
                <!-- https://heroicons.com -->
                <svg class="-ml-1 mr-2 h-5 w-5 text-red-900 hover:text-red-900" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9.568 3H5.25A2.25 2.25 0 003 5.25v4.318c0 .597.237 1.17.659 1.591l9.581 9.581c.699.699 1.78.872 2.607.33a18.095 18.095 0 005.223-5.223c.542-.827.369-1.908-.33-2.607L11.16 3.66A2.25 2.25 0 009.568 3z" />
                  <path stroke-linecap="round" stroke-linejoin="round" d="M6 6h.008v.008H6V6z" />
                </svg>

                Ver
              <% end %>
            </span>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
<% end %>